<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Legg til denne tillatelsen -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="tiramisu">

        <!-- Register the Culinaire activity here -->
        <activity
            android:name=".screens.Culinaire"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication" />

        <!-- Other activities in the app -->
        <activity android:name=".screens.ViewOldRecipe" />

        <activity
            android:name=".screens.DinnerListActivity"
            android:exported="false"
            android:label="@string/title_activity_settings_screen"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name=".screens.Ukeplan"
            android:exported="false"
            android:label="@string/title_activity_ukeplan"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name=".screens.Login"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.MyApplication">

            <!-- Intent filter to launch the Login activity as the main entry point -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>